<h1>Add a restaurant</h1>

<div class="form">
  <%= simple_form_for(@restaurant) do |f| %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
      <%= f.input :phone_number %>
      <%= f.input :address %>
    </div>
    <div class="form-actions btn btn-primary">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
